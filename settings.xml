<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <project>

        <settings>
            <config>
                <section name="templateArgon.settings">

                    <conf name="bgColorSwitcherPrefix">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>hide</defaultvalue>
                    </conf>
                    <conf name="bgColorSwitcherSuffix">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>hide</defaultvalue>
                    </conf>

                    <!-- nav bar -->
                    <conf name="navBarHeight">
                        <type><![CDATA[integer]]></type>
                        <defaultvalue>80</defaultvalue>
                    </conf>
                    <conf name="navPos">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>scroll</defaultvalue>
                    </conf>
                    <conf name="navBarMainColor">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#2d4d88</defaultvalue>
                    </conf>
                    <conf name="navBarFontColor">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#ffffff</defaultvalue>
                    </conf>

                    <conf name="mobileFontColor">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#ffffff</defaultvalue>
                    </conf>
                    <conf name="mobileMenuBackground">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#252122</defaultvalue>
                    </conf>
                    <conf name="search">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>input</defaultvalue>
                    </conf>

                    <!-- show header -->
                    <conf name="showHeaderStartPage">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showHeaderNoSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showHeaderLeftSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showHeaderRightSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>

                    <!-- show breadcrumb -->
                    <conf name="showBreadcrumbStartPage">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showBreadcrumbNoSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showBreadcrumbLeftSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="showBreadcrumbRightSidebar">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>

                    <!-- header img height and value  -->
                    <conf name="headerHeight">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>false</defaultvalue>
                    </conf>
                    <conf name="headerHeightValue">
                        <type><![CDATA[integer]]></type>
                        <defaultvalue>300</defaultvalue>
                    </conf>
                    <conf name="headerImagePosition">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>center</defaultvalue>
                    </conf>

                    <!-- colors -->
                    <conf name="colorMain">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#2D4D88</defaultvalue>
                    </conf>
                    <conf name="buttonFontColor">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#ffffff</defaultvalue>
                    </conf>
                    <conf name="colorFooterBackground">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#eeeeee</defaultvalue>
                    </conf>
                    <conf name="colorFooterFont">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#333333</defaultvalue>
                    </conf>
                    <conf name="colorFooterLinks">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#333333</defaultvalue>
                    </conf>
                    <conf name="colorMainContentBg">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#ffffff</defaultvalue>
                    </conf>
                    <conf name="colorMainContentFont">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#333333</defaultvalue>
                    </conf>

                    <!-- social -->
                    <conf name="social.show.nav">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="social.show.footer">
                        <type><![CDATA[bool]]></type>
                        <defaultvalue>0</defaultvalue>
                    </conf>
                    <conf name="social.facebook">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="social.twitter">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="social.google">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="social.youtube">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="social.github">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="social.gitlab">
                        <type><![CDATA[string]]></type>
                    </conf>
                </section>
            </config>

            <window>
                <categories>
                    <category name="templateArgon">
                        <text>
                            <locale group="quiqqer/template-argon"
                                    var="templateArgon.settings.menu.title"
                                    />
                        </text>
                        <icon>URL_BIN_DIR/22x22/quiqqer.png</icon>


                        <!-- Background Color Switcher Prefix / Suffix -->
                        <settings title="templateArgon.settings"
                                  name="templateArgon.settings.bgColorSwitcher">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.settings.bgColorSwitcher.title"
                                        />
                            </title>

                            <!-- Background Color Switcher Prefix -->
                            <select conf="templateArgon.settings.bgColorSwitcherPrefix">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcherPrefix.text"
                                            />
                                </text>

                                <description>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcherPrefix.description"
                                            />
                                </description>

                                <option value="hide">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcher.hide"
                                            />
                                </option>
                                <option value="display">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcher.display"
                                            />
                                </option>
                            </select>

                            <!-- Background Color Switcher Suffix-->
                            <select conf="templateArgon.settings.bgColorSwitcherSuffix">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcherSuffix.text"
                                    />
                                </text>

                                <description>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcherSuffix.description"
                                    />
                                </description>

                                <option value="hide">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcher.hide"
                                    />
                                </option>
                                <option value="display">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.bgColorSwitcher.display"
                                    />
                                </option>
                            </select>

                        </settings>


                        <!-- header settings -->
                        <settings title="templateArgon.settings"
                                  name="templateArgon.header.settings">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.header.settings.title"
                                        />
                            </title>

                            <!-- no header? -->
                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="showHeader.text" />
                            </text>
                            <input conf="templateArgon.settings.showHeaderStartPage"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showHeaderStartPage.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showHeaderNoSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showHeaderNoSidebar.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showHeaderLeftSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showHeaderLeftSidebar.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showHeaderRightSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showHeaderRightSidebar.text"
                                            />
                                </text>
                            </input>

                            <!-- header height and value -->
                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.header.settings.height.text"
                                />
                            </text>

                            <input conf="templateArgon.settings.headerHeight" type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.header.settings.height.enable.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.headerHeightValue" type="number">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.header.settings.height.value.text"
                                    />
                                </text>
                            </input>

                            <select conf="templateArgon.settings.headerImagePosition">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.headerImagePosition.text"
                                    />
                                </text>

                                <option value="flex-start">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.headerImagePosition.start"
                                    />
                                </option>
                                <option value="center">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.headerImagePosition.center"
                                    />
                                </option>
                                <option value="flex-end">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.headerImagePosition.end"
                                    />
                                </option>
                            </select>
                        </settings>


                        <!-- breadrcumb -->
                        <settings title="templateArgon.settings"
                                      name="templateArgon.breadcrumb.settings">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.breadcrumb.settings.title"
                                />
                            </title>

                            <!-- no breadcrumb? -->
                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="showBreadcrumb.text" />
                            </text>
                            <input conf="templateArgon.settings.showBreadcrumbStartPage"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showBreadcrumbStartPage.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showBreadcrumbNoSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showBreadcrumbNoSidebar.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showBreadcrumbLeftSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showBreadcrumbLeftSidebar.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.showBreadcrumbRightSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="showBreadcrumbRightSidebar.text"
                                    />
                                </text>
                            </input>
                        </settings>


                        <!-- nav bar -->
                        <settings title="templateArgon.settings"
                                  name="templateArgon.settings.navBar">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.settings.navBar.title"
                                />
                            </title>

                            <!-- nav bar height -->
                            <input conf="templateArgon.settings.navBarHeight" type="number">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navBar.Height.text"
                                    />
                                </text>
                            </input>

                            <!-- Menüposition -->

                            <select conf="templateArgon.settings.navPos">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navPos.text"
                                    />
                                </text>

                                <description>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navPos.description"
                                    />
                                </description>

                                <option value="fix">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navPos.fix"
                                    />
                                </option>
                                <option value="scroll">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navPos.scroll"
                                    />
                                </option>


                            </select>

                            <!-- search -->
                            <select conf="templateArgon.settings.search">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.search.text"
                                    />
                                </text>


                                <option value="input">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.search.input"
                                    />
                                </option>
                                <option value="inputAndIcon">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.search.inputAndIcon"
                                    />
                                </option>
                                <option value="inputAndIconVisible">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.search.inputAndIconVisible"
                                    />
                                </option>
                                <option value="hide">
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.search.hide"
                                    />
                                </option>
                            </select>

                            <!-- nav bar / menu colors -->
                            <input conf="templateArgon.settings.navBarMainColor"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navBarMainColor.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.navBarFontColor"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.navBarFontColor.text"
                                    />
                                </text>
                            </input>

                            <!-- mobile menu (mega menu) -->
                            <input conf="templateArgon.settings.mobileFontColor"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.mobileFontColor"
                                    />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.mobileMenuBackground"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="templateArgon.settings.mobileMenuBackground"
                                    />
                                </text>
                                <description>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.mobileMenuBackground.desc"
                                    />
                                </description>
                            </input>

                        </settings>

                        <!-- Colors -->
                        <settings title="templateArgon.settings"
                                  name="templateArgon.settings.color">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.settings.color.title"
                                        />
                            </title>

                            <input conf="templateArgon.settings.colorMain"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorMain.text"
                                            />
                                </text>
                                <description>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorMain.description"
                                            />
                                </description>
                            </input>

                            <input conf="templateArgon.settings.buttonFontColor"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.buttonFontColor.text"
                                    />
                                </text>
                            </input>

                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.settings.footerColor.text"
                                />
                            </text>
                            <input conf="templateArgon.settings.colorFooterBackground"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorFooterBackground.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.colorFooterFont"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorFooterFont.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.colorFooterLinks"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorFooterLinks.text"
                                            />
                                </text>
                            </input>

                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="templateArgon.settings.contentColor.text"
                                />
                            </text>

                            <input conf="templateArgon.settings.colorMainContentBg"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorMainContentBackground.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateArgon.settings.colorMainContentFont"
                                   type="color">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="template.settings.colorMainContentFont.text"
                                            />
                                </text>
                            </input>

                        </settings>

                        <!-- social icons -->
                        <settings title="templateArgon.settings"
                                  name="templateArgon.social.settings">
                            <title>
                                <locale group="quiqqer/template-argon"
                                        var="social.settings.title"
                                />
                            </title>

                            <!-- show social on nav? -->
                            <input conf="templateArgon.settings.social.show.nav"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.show.nav"
                                    />
                                </text>
                            </input>

                            <!-- show social on the footer? -->
                            <input conf="templateArgon.settings.social.show.footer"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.show.footer"
                                    />
                                </text>
                            </input>

                            <text>
                                <locale group="quiqqer/template-argon"
                                        var="social.linksNote"
                                />
                            </text>

                            <!-- facebook -->
                            <input conf="templateArgon.settings.social.facebook"
                                   placeholder="https://www.facebook.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.facebook"
                                    />
                                </text>
                            </input>
                            <!-- twitter -->
                            <input conf="templateArgon.settings.social.twitter"
                                   placeholder="https://www.twitter.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.twitter"
                                    />
                                </text>
                            </input>
                            <!-- google -->
                            <input conf="templateArgon.settings.social.google"
                                   placeholder="https://www.google.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.google"
                                    />
                                </text>
                            </input>
                            <!-- youtube -->
                            <input conf="templateArgon.settings.social.youtube"
                                   placeholder="https://www.youtube.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.youtube"
                                    />
                                </text>
                            </input>
                            <!-- github -->
                            <input conf="templateArgon.settings.social.github"
                                   placeholder="https://www.github.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.github"
                                    />
                                </text>
                            </input>
                            <!-- gitlab -->
                            <input conf="templateArgon.settings.social.gitlab"
                                   placeholder="https://www.gitlab.com"
                                   type="text">
                                <text>
                                    <locale group="quiqqer/template-argon"
                                            var="social.gitlab"
                                    />
                                </text>
                            </input>
                        </settings>

                    </category>
                </categories>

            </window>
        </settings>

        <wysiwyg class="page-content">
            <css src="//fonts.googleapis.com/css?family=Open+Sans:400,700,400italic"/>
            <css src="URL_OPT_DIR/quiqqer/template-argon/bin/css/argon.css"/>
            <css src="URL_OPT_DIR/quiqqer/template-argon/bin/css/fonts.css"/>
            <css src="URL_OPT_DIR/quiqqer/template-argon/bin/css/style.css"/>
            <css src="URL_OPT_DIR/quiqqer/template-argon/bin/css/editor.css"/>
        </wysiwyg>

    </project>
</quiqqer>